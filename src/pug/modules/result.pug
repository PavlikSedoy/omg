section.result#result

    // Flowers bg
    .flower-bg.result__flower-1
        include ../../assets/images/result/flowers/flower-1.svg
    .flower-bg.result__flower-2
        include ../../assets/images/result/flowers/flower-2.svg
    .flower-bg.result__flower-3
        include ../../assets/images/result/flowers/flower-3.svg
    // End flowers bg

    .container
        +sectionTitle('04', 'Результаты обучения')

        .result__items
            each val in resultItems
                article.result__item.border-out.border-out--top-left-radius.border-out--before.result-item
                    .result-item__in
                        .result-item__icon-wr.circle-item
                            img.result-item__img.lazy(data-src=`/assets/images/result/icon-${val['img']}.svg`, alt="Icon alt")
                        p.result-item__text= val['text']